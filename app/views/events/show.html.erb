<section id='event-show' class='p-4'>
  <h1 class="card-title"><%= @event.name %></h1>
  <div class='row g-3'>
    <div class='col-lg-6'>
      <div class="card mb-2 p-2">
        <img class="card-img-top" src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/f211ab5f-e703-4840-a8e3-db59a55e4ffa/ddfxej5-8688072f-8a87-43f8-9a63-dbd64e9b2aee.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..BbGPsoMOpll7oRjDkZrK0rLS06FuzQkcjGqPZUDZjWI" alt="card image">
      </div>
      <%= link_to "Home", root_path, class: "btn btn-dark mb-2" %>
      <%= link_to "Edit", edit_event_path, class: "btn btn-dark mb-2" %>
      <%= button_to 'Delete', event_path, method: :delete, class: "btn btn-danger mb-2" %>
    </div>
    <div class='col-lg-6'>
      <div class='card mb-2 p-2'>
        <h3>When and Where:</h3>
        <h6 class="card-subtitle mb-2">Date: <%= @event.date %></h6>
        <h6 class="card-subtitle mb-2">Location: <%= @event.location %></h6>
      </div>
      <div class='card mb-2 p-2'>
        <h3>About this event</h3>
        <p class="card-subtitle mb-2"><%= @event.description %></p>
      </div>
    </div>
    <div class='col-lg-6'>
      <h3>Attendees</h3>
      <ul class="list-group">
        <% @event.confirmations.each do |confirmation| %>
          <li class="list-group-item"><%= User.find(confirmation.event_attendee_id).email %></li>
        <% end %>
      </ul>
    </div>
  </div>
</section>
