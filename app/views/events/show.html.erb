<section id='event-show' class='p-4'>
  <h1 class="card-title"><%= @event.name %></h1>
  <div class='row g-2'>
    <div class='col-lg-6'>
      <div class="card mb-2 p-2">
        <img class="card-img-top" src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/f211ab5f-e703-4840-a8e3-db59a55e4ffa/ddfxej5-8688072f-8a87-43f8-9a63-dbd64e9b2aee.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..BbGPsoMOpll7oRjDkZrK0rLS06FuzQkcjGqPZUDZjWI" alt="card image">
      </div>
      <% if @event.creator_id == current_user.id %>
        <%= link_to "Edit", edit_event_path, class: "btn btn-dark mb-2 col-lg-12" %>
        <%= button_to 'Delete', event_path, method: :delete, class: "btn btn-danger col-lg-12" %>
      <% end %>
    </div>

    <div class='col-lg-3'>
      <div class="card mb-2">
        <div class='card-header'>When and Where</div>
        <div class='card-body'>
          <p class="card-text"><%= @event.date %></p>
          <p class="card-text"><%= @event.location %></p>
        </div>
      </div>
    </div>

    <div class='col-lg-3'>
      <div class='card'>
        <div class="card-header">Attendees</div>
        <div class='card-body'>
          <% @event.confirmations.each do |confirmation| %>
            <p class="card-text"><%= User.find(confirmation.event_attendee_id).username %></p>
          <% end %>
        </div>
      </div>
    </div>

    <div class='col-lg-6 mt-2'>
      <div class='card'>
        <div class="card-header">About this Event</div>
          <div class='card-body'>
            <p class="card-text ms-3"><%= @event.description %></p>
          </div>
        </div>
      </div>
    </div> 
</section>
